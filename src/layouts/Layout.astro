---
// Components
import Header from '@/components/common/Header.astro'
import ModeSelector from '@/components/common/ModeSelector.astro'

// Constants
import { mainColor, neutralColor } from '@/constants/colors'

// Libs
import '@fontsource-variable/roboto-mono'
import { ViewTransitions } from 'astro:transitions'

// props
const {page} = Astro.props
---

<!doctype html>
<html>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{page}</title>
    <ViewTransitions/>
	</head>
	<body transition:persist>
    <Header/>
    <slot />
    <ModeSelector />
	</body>
</html>

<style define:vars={{...mainColor, ...neutralColor}}></style>

<style>
	:root {
    --main-color: var(--main6);
    --main-color-hover: light-dark(var(--main2), var(--main9));
    --text-color: light-dark(var(--gray10), var(--gray2));
    --text-color-hover: light-dark(var(--gray5), var(--gray9));
    --bg-color: light-dark(var(--gray4), var(--gray12));
    --fade-bg: light-dark(rgba(255, 255, 255, 0.5), rgba(0, 0, 0, 0.5));
    --dark-mode: dark;
    --light-mode: light;
    --font-size: 12px;
    --noise-url: url('/noise.gif');
    --padding: max(1rem, 4vmin);
    --hover-transition: all .25s ease-in;
    font-family: 'Roboto Mono Variable', monospace;
    font-size: var(--font-size);
    color-scheme: var(--color-mode);
    color: var(--text-color);
		background: var(--bg-color);
	}

	html {
    position: absolute;
		font-family: monospace, system-ui, sans-serif;
    top: var(--padding);
    right: var(--padding);
    left: var(--padding);
    bottom: var(--padding);
    display: flex;
	}
  
  body, header, main {
    box-sizing: border-box;
  }
  
  body {
    margin: 0;
    display: flex;
    width: 100%;
    height: 100%;
    border: 1px solid var(--main-color);
  }

  body::before {
    content: '';
    background-image: var(--noise-url);
    opacity: 0.02;
    position: absolute;
    background-size: cover;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    z-index: 1;
    pointer-events: none;
  }

  body::after {
  content: '';
  display: block;
  background: 
    linear-gradient(0deg, rgba(255,255,255,0) 66%, var(--fade-bg) 84%);
  position: absolute;
  top: 1px;
  left: 1px;
  right: 1px;
  bottom: 0;
  z-index: 0;
  pointer-events: none;
}

  body::-webkit-scrollbar { 
    display: none;
  }
</style>
