---
// Components
import Menu from '@/components/common/Menu.astro'
import { getLocaleText } from '@/locales'

// Utils


// props
---

<header>
  <h1>{getLocaleText('title')}</h1>
  <h2>{getLocaleText('title.sub')}</h2>
  <Menu />
</header>



<style>
  h1 {
    font-weight: 100;
    font-size: 4rem;
    margin: 0;
  }

  h2 {
    font-weight: 400;
    font-size: 1.5rem;
    margin: 0;
    color: var(--main-color)
  }

  header {
    --header-padding: 3rem;
    z-index: 1;
    padding: var(--header-padding);
    height: auto;
    position: absolute;
  }

  @media only screen and (max-width: 600px) {
    header{
      --header-padding: 2rem;
    }
  }

</style>