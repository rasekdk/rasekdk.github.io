---
// Layouts
import Main from '@/components/common/Main.astro';
import Heading from '@/components/common/typography/Heading.astro';
import Paragraph from '@/components/common/typography/Paragraph.astro';
import Layout from '@/layouts/Layout.astro';
import { getLocaleText } from '@/locales';
---

<Layout page="César Nóvoa">
  <Main>
    <Heading type="h2" color="main">Hi,</Heading>
    <Paragraph>
      {getLocaleText('home.desc')}
    </Paragraph>
  </Main>
</Layout>

<style>
  main {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    text-align: right;
    padding: var(--padding);
    box-sizing: border-box;
    padding-left: 70%;
    top: var(--padding);
    right: var(--padding);
    left: var(--padding);
    bottom: var(--padding);
    font-size: 1.2rem;
  }

  @media only screen and (max-width: 600px) {
    main{
      padding-left: 20%;
    }
  }
</style>